{
	"version": "0.2.0",
	"compounds": [{
		"name": "Deploy/Test testProject",
		"configurations": ["Deploy testProject", "Debug testProject Tests"]
	}],
	"configurations": [{
		"type": "brightscript",
		"request": "launch",
		"name": "Deploy testProject",
		"rootDir": "${workspaceFolder}",
		"envFile": "${workspaceFolder}/.env",
		"host": "${env:LAUNCH_HOST_OVERRIDE}",
		"password": "${env:ROKU_PASSWORD}"
	}, {
		"name": "Debug testProject Tests",
		"type": "node",
		"request": "launch",
		"preLaunchTask": "build",
		"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
		"args": ["--timeout", "60000", "-r", "ts-node/register", "-r", "source-map-support/register", "./tests/**/*.spec.ts"],
		"cwd": "${workspaceFolder}",
		"protocol": "inspector",
		"internalConsoleOptions": "openOnSessionStart",
		"skipFiles": [
			"${workspaceFolder}/node_modules/**",
		]
	}]
}
