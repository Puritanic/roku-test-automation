{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.1.0",
    "configurations": [
		{
            "name": "Debug Non-Device Tests",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["-r", "ts-node/register", "-r", "source-map-support/register", "--exclude", "./src/RokuDevice.spec.ts", "./src/**/*.spec.ts"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**",
            ]
        }, {
            "name": "Debug Device Tests",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["-r", "ts-node/register", "-r", "source-map-support/register", "./src/RokuDevice.spec.ts"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**",
            ]
        }, {
            "name": "Debug Specific Test",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["-r", "ts-node/register", "-r", "source-map-support/register", "./src/**/*.spec.ts", "--grep", "testName"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**",
            ]
        }
    ]
}
